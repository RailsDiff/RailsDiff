<header>
  <LinkTo @route="index">
    <h1>{{t "railsdiff"}}</h1>
  </LinkTo>

  {{#if this.model}}
  <form onsubmit={{action this.showDiff}}>
    <label for="source-version">{{t "source"}}</label>
    <OneWaySelect id="source-version" @options={{this.sourceVersions}} @update={{action (mut this.sourceVersion)}} />
    <label for="target-version">{{t "target"}}</label>
    <OneWaySelect id="target-version" @options={{this.targetVersions}} @update={{action (mut this.targetVersion)}} />
    <button type="submit">{{t "view-diff"}}</button>
  </form>
  {{/if}}

  <LinkTo @route="about" class="about">{{t "about"}}</LinkTo>
</header>

{{#each messages as |message|}}
<div class="message {{message.type}}" data-message-type="{{message.type}}">
  <span>{{message.message}}</span>
  <a href=":javascript" {{action "dismissMessage" message}}>X</a>
</div>
{{/each}}

<div class="content">
  {{outlet}}
</div>